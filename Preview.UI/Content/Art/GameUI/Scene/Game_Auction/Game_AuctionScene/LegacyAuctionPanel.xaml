<UI:GameWindow x:Class="Xylia.Preview.UI.GameUI.Scene.Game_Auction.LegacyAuctionPanel"
		xmlns:UI="https://github.com/xyliaup/bns-preview-tools"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:i="clr-namespace:Xylia.Preview.UI.Common.Interactivity"
		xmlns:t="clr-namespace:Xylia.Preview.UI.GameUI.Scene.Game_Tooltip" 
        Title="AuctionScene" Height="750" Width="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<Grid Grid.Column="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="30" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<TextBox Grid.Row="0" Text="{Binding NameFilter, UpdateSourceTrigger=PropertyChanged}" />
			<TreeView Grid.Row="1" x:Name="TreeView" SelectedItemChanged="TreeView_SelectedItemChanged" />
		</Grid>
		<Grid Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="30" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<ToolBar>
				<ToggleButton Content="Comapre" Checked="Comapre_Checked" Unchecked="Comapre_Unchecked" Margin="0 0 5 0" Style="{DynamicResource TransparentToggleButton}" />
				<CheckBox Content="Auctionable" IsChecked="{Binding Auctionable}"/>
			</ToolBar>
			
			<!-- <TextBlock Grid.Row="1" x:Name="loader" Text="Loading..." HorizontalAlignment="Center" VerticalAlignment="Center"/> -->
			<ListView Grid.Row="1" x:Name="ItemList" HorizontalContentAlignment="Stretch" VirtualizingStackPanel.IsVirtualizing="True">
				<ListView.Resources>
					<ContextMenu x:Key="ItemMenu">
						<MenuItem Header="{DynamicResource PreviewRaw}" Command="{i:PreviewRaw}" CommandParameter="{Binding}"/>
						<MenuItem Header="{DynamicResource PreviewModel}" Command="{i:PreviewModel}" CommandParameter="{Binding}"/>
					</ContextMenu>
				</ListView.Resources>
				
				<ListView.ItemContainerStyle>
					<Style TargetType="{x:Type ListViewItem}">
						<Setter Property="Focusable" Value="False"/>
						<Setter Property="ContextMenu" Value="{StaticResource ItemMenu}"/>
					</Style>
				</ListView.ItemContainerStyle>
				<ListView.View>
					<GridView>
						<GridViewColumn Header="ItemName" Width="220">
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<Grid>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="Auto" />
											<ColumnDefinition Width="*" />
										</Grid.ColumnDefinitions>
										<Grid.ToolTip>
											<t:ItemTooltipPanel />
										</Grid.ToolTip>

										<UI:BnsCustomImageWidget Grid.Column="0" BaseImageProperty="{Binding FrontIcon}" Width="64" Height="64" />
										<UI:BnsCustomLabelWidget Grid.Column="1" Text="{Binding ItemName}" VerticalAlignment="Center" Margin="5 0 0 0" />
									</Grid>
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>
					</GridView>
				</ListView.View>
			</ListView>
		</Grid>
	</Grid>
</UI:GameWindow>