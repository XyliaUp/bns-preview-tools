			<case name="zone-open" />
			<case name="zone-in-creature-detect" />
			<case name="zone-out-creature-detect" />
			<case name="stop-zone-creature-detect" />
		</attribute>
		<attribute name="forward" type="Bool" />
	</el>
	<el name="quest-decision" child="filter-set, reaction-set">
		<attribute name="alias" type="String" required="y" max="50" />
	</el>
	
	<el name="filter-set" inherit="true" />
	<el name="reaction-set" inherit="true" />
</table>