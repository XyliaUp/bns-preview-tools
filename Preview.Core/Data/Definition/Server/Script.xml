			<case name="act-paused" />
			<case name="attack" />
			<case name="attacked" />
			<case name="convoy-failed" />
			<case name="damage" />
			<case name="damaged" />
			<case name="detect-creature" />
			<case name="gp-section-change" />
			<case name="invoke-effect" />
			<case name="invoked-effect" />
			<case name="kill" />
			<case name="killed" />
			<case name="link-laser-target-terminate" />
			
			<case name="boss-bleeding" />
			<case name="boss-hate-list-emptied" />
			<case name="npc-bleeding" />
			<case name="npc-combat-start" />
			<case name="npc-combat-end" />
			<case name="npc-manipulate-start" />
			<case name="npc-manipulate-end" />
			<case name="npc-spawn" />
			<case name="npc-despawn" />
