<?xml version="1.0" encoding="utf-8"?>
<table name="act-sequence" version="0.1" autokey="true" module="270">
	<el name="table" child="1" />
	<el name="act-sequence" child="action">
		<attribute name="alias" type="String" required="y" max="50" />
		<attribute name="indexed-detect" type="Int8" />
		<attribute name="detect" type="Seq">
			<case name="none" />
			<case name="both-180" />
			<case name="npc-180" />
			<case name="pc-180" />
			<case name="both-360" />
			<case name="npc-360" />
			<case name="pc-360" />
		</attribute>
		
		<sub name="act" />
		<sub name="peace" />
	</el>
	<el name="action" child="random-social">
		<attribute name="prob" type="Int8" />
		<sub name="despawn">
			<attribute name="respawn" type="Bool" />
		</sub>
		<sub name="hide">
			<attribute name="hide" type="Bool" />
			<attribute name="social" type="Int8" />
		</sub>
		<sub name="loop">
			<attribute name="min-count" type="Int8" />
			<attribute name="max-count" type="Int8" />
		</sub>
		<sub name="pause">
			<attribute name="step" type="Bool" />
		</sub>
		<sub name="select">
			<attribute name="enter-prob" type="Int8" />
		</sub>
		<sub name="stay">
			<attribute name="duration" type="Msec" />
			<attribute name="detect" type="Seq" seq="DetectSeq" />
			<attribute name="repeat" type="Int8" />
		</sub>
		
		
		
		<!-- MoveAround -->
		<sub name="indexed-movearound">
			<attribute name="min-idle-sec" type="Int8" />
			<attribute name="max-idle-sec" type="Int8" />
			<attribute name="min-move-count" type="Int8" />
			<attribute name="max-move-count" type="Int8" />
			<attribute name="area" type="Int8" />
		</sub>
		<sub name="movearound">
			<attribute name="min-idle-sec" type="Int8" />
			<attribute name="max-idle-sec" type="Int8" />
			<attribute name="min-move-count" type="Int8" />
			<attribute name="max-move-count" type="Int8" />
			<attribute name="area" type="Ref" ref="ZoneArea" />
		</sub>
		<sub name="movearound-for-fieldbossspawn">
			<attribute name="min-idle-sec" type="Int8" />
			<attribute name="max-idle-sec" type="Int8" />
			<attribute name="min-move-count" type="Int8" />
			<attribute name="max-move-count" type="Int8" />
			<attribute name="area" type="Ref" ref="ZoneArea" />
		</sub>
		<sub name="movearound-for-randomspawn">
			<attribute name="min-idle-sec" type="Int8" />
			<attribute name="max-idle-sec" type="Int8" />
			<attribute name="min-move-count" type="Int8" />
			<attribute name="max-move-count" type="Int8" />
			<attribute name="area" type="Ref" ref="ZoneArea" />
		</sub>


		<!-- PathWay -->
		<sub name="indexed-pathway">
			<attribute name="pathway" type="Int8" />
		</sub>
		<sub name="pathway">
			<attribute name="pathway" type="Ref" ref="ZonePathWay" />
		</sub>

		<!-- Social -->
		<sub name="indexed-social">
			<attribute name="social" type="Int8" />
			<attribute name="duration" type="Msec" />
			<attribute name="target" type="Script_obj" />
			<attribute name="detect" type="Seq" seq="DetectSeq" />
		</sub>
		<sub name="social">
			<attribute name="social" type="Ref" ref="Social" />
			<attribute name="duration" type="Msec" />
			<attribute name="target" type="Script_obj" />
			<attribute name="detect" type="Seq" seq="DetectSeq" />
		</sub>
	</el>

	<el name="random-social" child="social, indexed-social">
		<attribute name="social-prop" type="Int8" />
		<attribute name="min-delay-sec" type="Msec" />
		<attribute name="max-delay-sec" type="Msec" />
	</el>
	<el name="social">
		<attribute name="prop" type="Int8" />
		<attribute name="social" type="Ref" ref="Social" />
	</el>
	<el name="indexed-social">
		<attribute name="prop" type="Int8" />
		<attribute name="social" type="Int8" />
	</el>
</table>