<?xml version="1.0" encoding="utf-8"?>
<table>
	<list module="ItemData" type="guild-craft-recipe" version="0.3" >
		<record alias="id" type="Int32" key="y" />
		<record alias="alias" type="String" />
		<!-- =================================================== -->
		<record alias="craft-type" type="Seq" >
			<case alias="none" default="y"/>
			<case alias="small" />
			<case alias="big" />
		</record>


		<record alias="required-guild-level" type="Int8" />
		<record alias="required-faction" ref="Faction" />
		<record alias="production-type" seq="production-type" type="Seq" repeat="7" />
		<record alias="production-type-required-exp" type="Int16" repeat="7" />
		<record alias="production-type-required-pc-count" type="Int8" repeat="7" />
		<record alias="contract-money" type="Int32" />
		<record alias="contract-item" ref="Item" repeat="5" />
		<record alias="contract-item-count" type="Int16" repeat="5" />
		<record alias="contract-bm-item" ref="Item" />
		<record alias="contract-bm-item-count" type="Int16" />
		<record alias="rent-bm-item" ref="Item" />
		<record alias="rent-bm-item-count" type="Int16" />
		<record alias="material" ref="Item" repeat="15" />
		<record alias="material-count" type="Int16" repeat="15" />
		<record alias="material-donation-point" type="Int16" repeat="15" />
		<record alias="brand-material" ref="ItemBrand" repeat="3" />
		<record alias="brand-material-condition-type" type="Seq" out-cond="exist: brand-material-*" seq="condition-type" repeat="3" />
		<record alias="brand-material-count" type="Int16" repeat="3" />
		<record alias="brand-material-donation-point" type="Int16" repeat="3" />
		<record alias="time-cost" type="Int32" />
		<record alias="result" ref="Item" />
		<record alias="result-count" type="Int16" />
		<record alias="result-bonus-guildlevel" type="Int16" />
		<record alias="result-bonus-count" type="Int16" />
		<record alias="result-receive-type" type="Seq" >
			<case alias="authorized" />
			<case alias="specified" />
		</record>
		<record alias="use-state" type="Seq" >
			<case alias="invalid-state" />
			<case alias="no-more-use" />
			<case alias="in-use" />		
		</record>		
	</list>
</table>